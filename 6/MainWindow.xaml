<Window x:Class="_6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_6"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Введите товары:" FontSize="16" Margin="0 0 0 5"/>
            <TextBox x:Name="textBox" MinHeight="60" FontSize="14" TextWrapping="Wrap" Margin="0 0 0 10"/>
            <Button Content="Посчитать" FontSize="14" Padding="5" Margin="0 0 0 10" Click="Button_Click"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="товары с наименованием Ручка шариковая : " FontSize="16" Margin="0 0 5 0"/>
                <TextBlock x:Name="tovarCountText" FontSize="16"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
